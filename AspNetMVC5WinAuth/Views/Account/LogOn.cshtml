@model AspNetMVC5WinAuth.Models.LogOnModel
@{
    ViewBag.Title = "LogOn";
}

<h2>@ViewBag.Title</h2>

<div id="logon">
    <div class="row">
        <div class="col-md-5 col-md-offset-4 col-sm-6 col-sm-offset-3 col-lg-5 col-lg-offset-4">
            <p>
                @Html.ValidationSummary(true, "Login was unsuccessful. Please correct the errors and try again.", new { @class = "alert alert-danger", @role = "alert" })
            </p>
            @using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { @class = "well box-shadow", autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                <fieldset>
                    <legend>Log on</legend>
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName)
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                            @Html.EditorFor(m => m.UserName, new { htmlAttributes = new { @class = "form-control", @autofocus = "true", @placeholder = "Username" }, })
                        </div>
                        <div class="validation-line">
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>

                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        <div class="input-group">
                            <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", style = "height:35px;" })
                        </div>
                        <div class="validation-line">
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                    <div class="help-block">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(m => m.RememberMe) Remember Me
                            </label>
                        </div>
                    </div>
                    <p>
                        <input type="submit" value="Log On" class="btn btn-primary" />
                    </p>
                </fieldset>
            }
        </div>
    </div>
</div>
